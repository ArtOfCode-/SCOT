<table class="table table-sm details-table">
  <thead>
  <tr>
    <th colspan="2">Contact Details</th>
  </tr>
  </thead>
  <tbody>
  <tr>
    <td>Reported by</td>
    <td><%= request.name %></td>
  </tr>
  <tr>
    <td>Tel. no</td>
    <td><%= request.phone %></td>
  </tr>
  <tr>
    <td>Email address</td>
    <td><%= request.email %></td>
  </tr>
  <tr>
    <td>Twitter</td>
    <td><%= request.twitter %></td>
  </tr>
  <tr>
    <td>Tweet</td>
    <td><%= request.media %></td>
  </tr>
  <tr>
    <td>Source</td>
    <td><%= request.source %></td>
  </tr>
  </tbody>
</table>

<table class="table table-sm details-table">
  <thead>
  <tr>
    <th colspan="2">Incident Details</th>
  </tr>
  </thead>
  <tbody>
  <% if has_any_role?(:medical, :developer) %>
      <tr>
        <td>Chart Code</td>
        <td><%= request.chart_code %></td>
      </tr>
  <% end %>
  <tr>
    <td>People needing assistance</td>
    <td><%= request.people_count %></td>
  </tr>
  <tr>
    <td>Medical conditions</td>
    <td><%= request.medical_details %></td>
  </tr>
  <tr>
    <td>Extra details</td>
    <td><%= request.extra_details %></td>
  </tr>
  </tbody>
</table>