<%= form_for @attempt, url: url do |f| %>
  <div class="field my-1">
    <%= f.label :outcome %><br/>
    <%= f.text_field :outcome, class: 'form-control', placeholder: 'Success/no answer' %>
  </div>

  <div class="field my-1">
    <%= f.label :medium %><br/>
    <%= f.text_field :medium, class: 'form-control', placeholder: 'Phone/email/snail mail' %>
  </div>

  <div class="field my-1">
    <%= f.label :details %><br/>
    <%= f.text_area :details, rows: 5, cols: 90, class: 'form-control',
                    placeholder: 'What was the reason for the contact? What information did you get?' %>
  </div>

  <div class="actions my-1">
    <%= f.submit 'Save', class: 'btn btn-outline-success' %>
    <input type="reset" class="btn btn-danger" value="Cancel" />
  </div>
<% end %>